{
  "name": "mobdebug",
  "displayName": "Mock Debug",
  "version": "0.52.0",
  "publisher": "Alexej Doronin",
  "description": "Mobdebug adapter",
  "author": {
    "name": "Alexej Doronin",
    "email": "lyosha.doronin@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "lua",
    "debugger",
    "mobdebug"
  ],
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-mock-debug.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/vscode-mock-debug/issues"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/extension.js",
    "watch": "npm run -S esbuild-base -- --sourcemap --sources-content=false --watch",
    "esbuild-web": "esbuild ./src/web-extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=browser --outfile=dist/web-extension.js",
    "watch-web": "npm run -S esbuild-web -- --sourcemap --sources-content=false --watch",
    "build": "npm run -S esbuild-base -- --sourcemap --sources-content=false && npm run -S esbuild-web -- --sourcemap --sources-content=false",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish-pre-release": "vsce publish --pre-release",
    "vscode:prepublish": "rimraf dist && npm run -S esbuild-base -- --minify && npm run -S esbuild-web -- --minify",
    "test": "npm run typecheck"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/debugadapter-testsupport": "^1.56.0",
    "await-notify": "^1.0.1",
    "base64-js": "^1.5.1",
    "esbuild": "^0.14.29",
    "eslint": "^8.12.0",
    "events": "^3.3.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "path-browserify": "^1.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "url": "^0.11.0",
    "vsce": "^2.7.0"
  },
  "main": "./dist/extension.js",
  "browser": "./dist/web-extension.js",
  "activationEvents": [
    "onDebugResolve:mock",
    "onDebugDynamicConfigurations:mock"
  ],
  "workspaceTrust": {
    "request": "never"
  },
  "contributes": {
    "breakpoints": [
      {
        "language": "lua"
      }
    ],
    "debuggers": [
      {
        "type": "mobdebug",
        "languages": [
          "lua"
        ],
        "label": "Lua Mob Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "attach": {
            "required": [],
            "properties": {
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after attach.",
                "default": true
              },
              "listenPort": {
                "type": "number",
                "description": "Port to listen target program for",
                "default": 8172
              },
              "listenPublic": {
                "type": "boolean",
                "description": "Listen on all interfaces",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "mobdebug",
            "request": "attach",
            "name": "Listen for mobdebug clients",
            "listenPort": 8172,
            "listenPublic": false
          }
        ],
        "configurationSnippets": [
          {
            "label": "Mobdebug: Attach",
            "description": "A new configuration for 'debugging' of mobdebug lua clients.",
            "body": {
              "type": "mobdebug",
              "request": "attach",
              "name": "Listen for mobdebug clients",
              "listenPort": 8172,
              "listenPublic": false
            }
          }
        ]
      }
    ]
  }
}
